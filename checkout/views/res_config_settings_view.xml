<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_website_res_config_settings_view_form_checkout" model="ir.ui.view">
        <field name="name">cap_checkout_config</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="checkout" string="Checkout One Page" data-key="checkout">
                    <h2>Checkout One page</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box" >
                            <div class="o_setting_right_pane">
                                <label string="Checkout" for="checkout_promo_text"/>
                                <div class="text-muted">
                                    Settings text for Promos/Discounts in Checkout One Page
                                </div>
                                <div class="mt16">
                                    <field name="checkout_promo_text"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
