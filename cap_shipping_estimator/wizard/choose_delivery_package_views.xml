<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="choose_delivery_package_view_form_inherit_wizard" model="ir.ui.view">
        <field name="name">choose.delivery.package.form.inherit.wizard</field>
        <field name="model">choose.delivery.package</field>
        <field name="inherit_id" ref="delivery.choose_delivery_package_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='delivery_packaging_id']" position="after">
                <field name="is_custom_parcel" invisible="1"/>
                <label for="height" attrs="{'invisible': ['|',('delivery_packaging_id', '=', False),('is_custom_parcel', '!=', False)]}"/>
                    <div class="o_row" attrs="{'invisible': [('delivery_packaging_id', '=', False)]}" name="package_height">
                        <field name="height" attrs="{'invisible': ['|',('delivery_packaging_id', '=', False),('is_custom_parcel', '!=', False)]}"/>
                        <field name="length_uom_name" attrs="{'invisible': ['|',('delivery_packaging_id', '=', False),('is_custom_parcel', '!=', False)]}"/>
                    </div>
                <label for="width" attrs="{'invisible': ['|',('delivery_packaging_id', '=', False),('is_custom_parcel', '!=', False)]}"/>
                    <div class="o_row" attrs="{'invisible': [('delivery_packaging_id', '=', False)]}" name="package_width">
                        <field name="width" attrs="{'invisible': ['|',('delivery_packaging_id', '=', False),('is_custom_parcel', '!=', False)]}"/>
                        <field name="length_uom_name" attrs="{'invisible': ['|',('delivery_packaging_id', '=', False),('is_custom_parcel', '!=', False)]}"/>
                    </div>

                <label for="length" attrs="{'invisible': ['|',('delivery_packaging_id', '=', False),('is_custom_parcel', '!=', False)]}"/>
                    <div class="o_row" attrs="{'invisible': [('delivery_packaging_id', '=', False)]}" name="package_length">
                        <field name="length" attrs="{'invisible': ['|',('delivery_packaging_id', '=', False),('is_custom_parcel', '!=', False)]}"/>
                        <field name="length_uom_name" attrs="{'invisible': ['|',('delivery_packaging_id', '=', False),('is_custom_parcel', '!=', False)]}"/>
                    </div>
            </xpath>
        </field>
    </record>
</odoo>
