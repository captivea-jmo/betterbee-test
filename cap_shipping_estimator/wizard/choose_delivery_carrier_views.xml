<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_choose_delivery_carrier_view_form" model="ir.ui.view">
        <field name="name">choose.delivery.carrier.form</field>
        <field name="model">choose.delivery.carrier</field>
        <field name="inherit_id" ref="delivery.choose_delivery_carrier_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='carrier_id']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <!--            <xpath expr="//label[@for='display_price']" position="replace"/>-->
            <xpath expr="//label[@for='display_price']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='display_price']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='update_price']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='button_confirm'][1]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='button_confirm'][2]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//group" position="inside">
                <field name="select_carrier_ids" readonly="1">
                    <tree create="0" delete="0" edit="0">
                        <field name="name"/>
                        <field name="delivery_cost"/>
                        <button name="button_confirm" type="object" string="Add" class="btn-primary" context="{'wizard_id': parent.id}"/>
                    </tree>
                </field>
            </xpath>
        </field>
    </record>
</odoo>
