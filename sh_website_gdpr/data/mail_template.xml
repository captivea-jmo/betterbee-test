        <field name="subject">Thanks for your request</field>
        <field name="body_html" type="html">
            <div style="line-height: 28px;">
                Hello <b>${object.partner_id.name}</b>,<br />
                You have requested to information of <b>${object.data_categ_id.name}</b>.<br />
                We will provide information as soon as possible.
                <br />
                <a class="btn btn-primary" role="button" href="${object.env.context.get('customer_url')}">Click here to check request</a>
                <br />
                <div>Thank you</div>
            </div>
        </field>
    </record>

