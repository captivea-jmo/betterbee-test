<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Settings for Notifications -->
    <record id="sh_website_gdpr_config_settings" model="ir.ui.view">
        <field name="name">website setting</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div id="website_settings" position="after">
                <h2>GDPR</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-offset-6 col-lg-6 o_setting_box" id="is_enable_gdpr">
                        <div class="o_setting_left_pane">
                            <field name="is_enable_gdpr" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_enable_gdpr" />
                        </div>
                    </div>
                    <div class="col-12 col-lg-offset-6 col-lg-6 o_setting_box"></div>
                    <div class="col-12 col-lg-offset-6 col-lg-6 o_setting_box" id="is_enable_gdpr">
                        <div class="o_setting_left_pane">
                            <field name="is_enable_email" attrs="{'invisible':[('is_enable_gdpr','=',False)]}" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_enable_email" attrs="{'invisible':[('is_enable_gdpr','=',False)]}" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="user_ids" attrs="{'invisible':['|',('is_enable_gdpr','=',False),('is_enable_email','=',False)]}" />
                            <field name="user_ids" widget="many2many_tags" attrs="{'invisible':['|',('is_enable_gdpr','=',False),('is_enable_email','=',False)]}" domain="[('share', '=', False)]" />
                        </div>
                    </div>
                    <div class="col-12 col-lg-offset-6 col-lg-6 o_setting_box"></div>
                    <div class="col-12 col-lg-offset-6 col-lg-6 o_setting_box" id="is_enable_gdpr">
                        <div class="o_setting_left_pane">
                            <field name="is_customer" attrs="{'invisible':['|',('is_enable_gdpr','=',False),('is_enable_email','=',False)]}" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_customer" attrs="{'invisible':['|',('is_enable_gdpr','=',False),('is_enable_email','=',False)]}" />
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
