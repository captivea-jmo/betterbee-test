<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- GDPR Category Tree -->
    <record id="sh_website_gdpr_category_tree" model="ir.ui.view">
        <field name="name">sh.gdpr.data.category.tree</field>
        <field name="model">sh.gdpr.data.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="redirect_url" />
                <field name="type" />
                <field name="create_date" />
                <field name="active" />
            </tree>
        </field>
    </record>

    <!-- GDPR Category Form -->
    <record id="sh_website_gdpr_category_form" model="ir.ui.view">
        <field name="name">sh.gdpr.data.category.form</field>
        <field name="model">sh.gdpr.data.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image_img" widget="image" class="oe_avatar" />
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <field name="company_id" invisible="1" />
                    <group>
                        <group>
                            <field name="type" />
                            <field name="website_id" groups="website.group_multi_website" />
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="redirect_url" />
                        </group>
                        <group>
                            <field name="active" />
                            <field name="create_date" />
                        </group>
                    </group>
                    <group string="Short Description"></group>
                    <field name="description" />
                </sheet>
            </form>
        </field>
    </record>

    <!-- GDPR Category Search -->
    <record id="sh_website_gdpr_category_search" model="ir.ui.view">
        <field name="name">sh.gdpr.data.category.search</field>
        <field name="model">sh.gdpr.data.category</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" filter_domain="['|','|','|',('name', 'ilike', self),('redirect_url', 'ilike', self),('type', 'ilike', self)" />
                <field name="redirect_url" filter_domain="[('redirect_url', 'ilike', self)]" />
                <field name="type" filter_domain="[('type', 'ilike', self)]" />
                <filter string="Active" name="active" domain="[('active', '=',True)]" />
                <filter string="Inactive" name="inactive" domain="[('active', '=',False)]" />
                <filter string="Create Date" name="filter_create_date" date="create_date" />
                <group expand="0" string="Group By">
                    <filter string="Created On" name="create_date" context="{'group_by':'create_date'}" />
                </group>
                <group expand="0" string="Group By">
                    <filter string="Website" name="website_id" context="{'group_by':'website_id'}" />
                </group>
            </search>
        </field>
    </record>

    <!-- GDPR Category Action -->
    <record id="sh_website_gdpr_category_action" model="ir.actions.act_window">
        <field name="name">Data GDPR Category</field>
        <field name="type">ir.actions.act_window</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="res_model">sh.gdpr.data.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- GDPR Category Menus -->
    <menuitem id="sh_website_gdpr_main_menu" name="GDPR Data" sequence="100" web_icon="sh_website_gdpr,static/src/icon/icon.png" groups="group_sh_website_gdpr_menu" />

    <menuitem id="sh_website_gdpr_menu" name="GDPR Data" parent="sh_website_gdpr_main_menu" />

    <menuitem id="sh_website_gdpr_category_menu" action="sh_website_gdpr_category_action" name="GDPR Category" parent="sh_website_gdpr_menu" />
</odoo>
