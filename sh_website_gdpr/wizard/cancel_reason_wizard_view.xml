<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_website_gdpr_cancel_reason_wizard_view" model="ir.ui.view">
        <field name="name">sh.website.gdpr.cancel.reason.wizard.form.view</field>
        <field name="model">sh.website.gdpr.cancel.reason.wizard</field>
        <field name="arch" type="xml">
            <form string="Update Tags">
                <group>
                    <field name="cancel_reason" />
                </group>

                <footer>
                    <button class="btn-primary" name="submit_reason" type="object" string="Submit" />
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="sh_website_gdpr_cancel_reason_wizard_action" model="ir.actions.act_window">
        <field name="name">Cancel Reason</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.website.gdpr.cancel.reason.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sh_website_gdpr_cancel_reason_wizard_view" />
        <field name="target">new</field>
    </record>
</odoo>
